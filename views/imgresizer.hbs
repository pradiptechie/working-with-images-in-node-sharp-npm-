<!DOCTYPE html>
<html>
<head>
  <title>Image Resizer</title>
  {{!-- <link rel="icon" type="image/png" href="/Sharp/working-with-images-in-node-sharp-npm-/views/favicon.ico"> --}}
  <link rel="icon" type="image/png" href="./favicon.ico">
  <style>
    @import url("https://fonts.googleapis.com/css2?family=Ubuntu:wght@300;400;500;700&display=swap");

    * {
      font-family: "Ubuntu", sans-serif;
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    :root {
    --blue: #2a2185;
    --blue2: #4236ce;
    --white: #fff;
    --gray: #f4f4f4;
    --gray2: #eeecec;
    --black1: #222;
    --black2: #999;
    }
  </style>
<style>
    body {
        background: var(--gray);
        color: var(--black1);
        text-align: center;
        margin: 0;
        padding: 0;
    }

    h1 {
        color: var(--white);
        background:var(--blue);
        padding: 20px;
        margin: 0;
    }

    form {
        margin: 20px;
        padding: 20px;
        background: var(--white);
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
    }


    input[type="file"] {
        padding: 10px;
        border: 2px solid var(--blue);
        border-radius: 5px;
        width: 60%;
        margin-bottom: 20px;
    }

    input[type="number"]{
      padding: 8px;
      border: 2px solid var(--blue);
      border-radius: 5px;
      margin-bottom: 20px;


    }

    button {
        width: 95%;
        background: var(--blue);
        color: var(--white);
        padding: 12px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    button:hover {
        background: var(--blue2);
    }

    #result, #download {
        margin: 20px;
        padding: 20px;
        background: var(--white);
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
    }
</style>

</head>

<body>
  <h1>Image Resizer</h1>
  <form id="form-submit" enctype="multipart/form-data">
    <input type="file" name="image" accept="image/*" required>
    <input type="number" name="height" placeholder="Height" required> X 
    <input type="number" name="width" placeholder="Width" required>
    <button type="submit">Upload and Resize</button>
  </form>

  <div id="result">
  </div>

  <div id="download">
    <a id="download-link" href="#" download="resized_image.png" style="display: none;">Download</a>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const form = document.getElementById('form-submit');
      const resultContainer = document.getElementById('result');
      const downloadLink = document.getElementById('download-link');

      form.addEventListener('submit', (e) => {
        e.preventDefault(); // Prevent the default form submission.

        const formData = new FormData(form);
        console.log(formData);

        // Send the form data to the server using Fetch API
        fetch('/imgresizer', {
          method: 'POST',
          body: formData,
        })
          .then((response) => response.text()) // Convert the response to text
          .then((dataUrl) => {
            // Create an image element and set its src attribute to the data URL
            const imageElement = document.createElement('img');
            imageElement.src = dataUrl;

            // Clear the result container and append the image element
            resultContainer.innerHTML = '';
            resultContainer.appendChild(imageElement);

            // Set the download link's href and display it
            downloadLink.href = dataUrl;
            downloadLink.style.display = 'block';
          })
          .catch((error) => {
            console.error('Error:', error);
          });
      });
    });
  </script>
</body>
</html>